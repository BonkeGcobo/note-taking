{
  "manifest_version": 3,
  "name": "Youtube Note taking",
  "version": "1.0.0",
  "description": "A simple Chrome extension with React to take notes on youtube.",
  "host_permissions": ["https://*.youtube.com/*"],
  "background": {
    "service_worker": "static/js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["static/js/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/bookmark.png",
        "assets/play.png",
        "assets/delete.png",
        "assets/save.png",
        "assets/comment-solid.svg"
      ],
      "matches": ["https://*.youtube.com/*"]
    }
  ],
  "action": {
    "default_popup": "index.html",

  "icons": {
    "16": "8.png"
  },
    "default_icon":{
      "16": "8.png",
      "48":"YoutubeNoteTakeRee.png"
   }
  },
  "permissions": ["tabs", "activeTab", "webNavigation", "scripting", "storage"]
}
